@model MovieApp.Web.Models.AdminMoviesViewModel

<h1>Admin Movie List</h1>   

<table class="table table-striped table-hover table-bordered">
    <thead>
    <tr>
        <th style="width:30px">#</th>
        <th style="width:100px">Image</th>
        <th>Title</th>
        <th style="width:70px">Genres</th>
        <th style="width:160px"></th>
    </tr>
    </thead>
    <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <td>@movie.MovieID</td>   
                    <td><img src="/img/@movie.ImageURL" class="img-responsive card-img" width="10" style="width:100px"/></td> 
                    <td>@movie.Title</td>
                    <td>
                        <ul>
                              @foreach (var genre in movie.Genres)
                              {
                                     <li>@genre.Name</li>
                              }
                        </ul>
                    </td>
                    <td>
                        <a href="/admin/movieUpdate/@movie.MovieID" class="btn btn-primary btn-sm">Update</a>
                        <form action="/admin/moviedelete" method="post" style="display:inline">
                            <input type="hidden" name="movieId" value="@movie.MovieID" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
    </tbody>
</table>